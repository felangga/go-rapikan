{
  "name": "go-rapikan",
  "displayName": "Go Rapikan",
  "description": "VSCode extension to neatly group and sort Go imports (standard, external, internal company, internal project) after running go fmt.",
  "version": "0.0.1",
  "author": {
    "name": "felangga",
    "email": "felangga@gmail.com",
    "url": "https://felangga.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felangga/go-rapikan.git"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": ["onLanguage:go"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "go-rapikan.sortImports",
        "title": "Go Rapikan Imports"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  }
}
