{
  "name": "go-rapikan",
  "displayName": "Go Rapikan",
  "description": "VSCode extension to neatly group and sort Go imports (standard, external, internal company, internal project) after running go fmt.",
  "version": "0.1.0",
  "publisher": "felangga",
  "author": {
    "name": "felangga",
    "email": "felangga@gmail.com",
    "url": "https://felangga.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felangga/go-rapikan.git"
  },
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "go-rapikan.organizeCodes",
        "title": "Go Rapikan: Organize Codes"
      }
    ],
    "configuration": {
      "title": "Go Rapikan",
      "properties": {
        "go-rapikan.organizeOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically organize Go codes when saving files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./dist/test/runTest.js",
    "test-watch": "tsc -watch -p ./ --outDir dist"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^11.0.3",
    "mocha": "^11.7.2",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  }
}
